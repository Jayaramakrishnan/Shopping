# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET      /                                                                @com.crackers.controllers.LoginController.index(url: String ?= "")
POST     /Login                                                           @com.crackers.controllers.LoginController.validate
GET      /Logout                                                          @com.crackers.controllers.LoginController.logout
GET      /sessioncheck                                                    @com.crackers.controllers.LoginController.sessionCheck

GET      /DashBoard                                                       @com.crackers.controllers.Dashboard.dashBoard
POST     /redirectResource                                                @com.crackers.controllers.Dashboard.redirectResource

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

#SignIn
GET      /Authenticate                                                    @com.crackers.controllers.AuthenticationController.authenticate

#SignUp
POST     /CreateUser                                                      @com.crackers.controllers.web.UserSettingWebController.createUser
#PUT      /UpdateUser/:idUser                                              @com.crackers.controllers.web.UserSettingWebController.updateUser(idUser: String)

POST     /User                                                            @com.crackers.controllers.UserController.createUser(uniqueId: String)
PUT      /User                                                            @com.crackers.controllers.UserController.updateUser(uniqueId: String)